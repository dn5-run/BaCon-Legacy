{
    "name": "BaCon",
    "version": "0.1",
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "format": "yarn prettier:write",
        "prettier:write": "prettier --write './modules/**/src/**/*.{ts,tsx}'",
        "compile": "ts-node ./build.ts compile",
        "build": "ts-node ./build.ts build"
    },
    "bin": {
        "bacon": "./dist/server/index.js"
    },
    "packageManager": "yarn@3.1.1",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.1.1",
        "@types/node": "^17.0.13",
        "fs-extra": "^10.0.0",
        "pkg": "^5.5.2",
        "prettier": "^2.5.1",
        "ts-node": "^10.4.0"
    },
    "pkg": {
        "scripts": "dist/server/**/*.js",
        "assets": "dist/web/**/*",
        "outputPath": "product"
    }
}
