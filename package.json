{
    "name": "BaCon",
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "format": "yarn prettier:write && yarn eslint:fix",
        "eslint:fix": "eslint --fix './modules/**/src/**/*.{ts,tsx}'",
        "prettier:write": "prettier --write './modules/**/src/**/*.{ts,tsx}'",
        "build": "ts-node ./build.ts"
    },
    "bin":{
        "bacon": "./dist/server/index.js"
    },
    "packageManager": "yarn@3.1.1",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.1.1",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-workspaces": "^0.7.0",
        "fs-extra": "^10.0.0",
        "pkg": "^5.5.2",
        "prettier": "^2.5.1",
        "ts-node": "^10.4.0"
    },
    "pkg": {
        "scripts": "dist/server/**/*.js",
        "assets": "dist/web/**/*",
        "outputPath": "product"
    }
}
